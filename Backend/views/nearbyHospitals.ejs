<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nearby Hospitals</title>
  <link rel="stylesheet" type="text/css" href="/styles/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Dela+Gothic+One&family=Pacifico&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&display=swap"
    rel="stylesheet">
  <style>
    .display {
      text-align: center;
      margin-top: 20px;
    }

    img {
      border-radius: 10%;
    }
  </style>
</head>

<body>
  <%- include('partials/Navbar.ejs') %>

    <h3 style="text-align: center; font-weight: 700;">Nearby Hospitals</h3>
    <br>
    <div class="places-grid">
      <% if (places && places.length> 0) { %>
        <% places.forEach(place=> { %>
          <div class="place-container">
            <img src="<%= place.imageUrl %>" alt="<%= place.placeName %>">
            <div class="place-overlay">
              <div class="items"></div>
              <div class="items head">
                <p>
                  <%= place.placeName %>
                </p>
                <hr>
              </div>
              <div class="items contact">
                <p>
                  <%= place.contactInfo %>
                </p>
              </div>
              <div class="items action">
                <i class="fas fa-map-marker-alt"></i>
                <span>GET DIRECTIONS</span>
              </div>
            </div>
          </div>
          <% }) %>
            <% } else { %>
              <p>No hospitals found in your area.</p>
              <% } %>
    </div>

    <%- include('partials/Footer.ejs') %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>