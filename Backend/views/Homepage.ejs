    <!-- content.... -->


    <br>
    <br>
    <br>

    <h3 style="text-align: center;">Nearby Hospitals And Pharmacy</h3>
    <div class="places-grid">
      <% if (places && places.length> 0) { %>
        <% places.slice(0, 6).forEach(place=> { %>
          <div class="place-container">
            <img src="<%= place.imageUrl %>" alt="<%= place.placeName %>">
            <div class="place-overlay">
              <div class="items"></div>
              <div class="items head">
                <p>
                  <%= place.placeName %>
                </p>
                <hr>
              </div>
              <div class="items contact">
                <p>
                  <%= place.contactInfo %>
                </p>
              </div>
              <div class="items action">
                <i class="fas fa-map-marker-alt"></i>
                <span>GET DIRECTIONS</span>
              </div>
            </div>
          </div>
          <% }) %>
            <% } else { %>
              <p>No places found.</p>
              <% } %>
    </div>
    <br>
    <br>
    <br>

    <div class="display">
